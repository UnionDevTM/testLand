    <script>
        function buyProduct(name, price) {
            fetch('/order', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({product: name, price: price})
            }).then(response => response.json())
              .then(data => alert(data.message));
        }
    </script>
